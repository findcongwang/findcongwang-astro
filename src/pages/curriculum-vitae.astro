---
// Assets
import { Image } from "astro:assets";
import Designer from "/src/images/assets/designer.jpeg";
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";

const bioParagraphs = [
  "Hi, I’m Vanta Smith — a developer who designs, or maybe a designer who codes. Over the past 10 years, I’ve worked on everything from early-stage startups to large-scale design systems.",
  "This course is the one I wish existed when I started blending code with design. It’s practical, opinionated, and focused on real UI problems: spacing, typography, layout, responsiveness, accessibility, and polish.",
  "Whether you’re a dev who wants to level up your design eye, or a designer learning to ship real components — this course is for you.",
];

const motivation = [
  "Most design courses ignore the realities of development. Most coding tutorials skip design entirely.",
  "This course lives in the middle — where UI actually gets built. I created this to help you become the kind of builder that teams love: thoughtful, fast, and detail-oriented.",
];

const timeline = [
  {
    year: "2013",
    event: "Started as a graphic designer freelancing for local brands.",
  },
  {
    year: "2016",
    event:
      "Transitioned to front-end development and joined a startup as the first designer-developer hybrid.",
  },
  {
    year: "2019",
    event:
      "Led design system work at a SaaS company scaling to millions of users.",
  },
  {
    year: "2022",
    event:
      "Began mentoring devs and designers on how to build accessible, production-ready UI.",
  },
  {
    year: "2025",
    event:
      "Launched this course to share everything I’ve learned — from pixels to code.",
  },
];
const awards = [
  {
    year: "2021",
    title: "CSS Design Award – Best UI",
    description:
      "Recognized for crafting an intuitive and scalable design system used by over 1M users.",
  },
  {
    year: "2022",
    title: "Smashing Magazine Contributor",
    description:
      "Published a widely shared article on bridging design and development workflows.",
  },
  {
    year: "2023",
    title: "Figma Config Speaker",
    description:
      "Presented a talk on component-driven design for developer-minded designers.",
  },
  {
    year: "2023",
    title: "Awwwards – Honorable Mention",
    description:
      "Awarded for a personal portfolio showcasing innovative UI with high performance and accessibility.",
  },
  {
    year: "2024",
    title: "Google Developer Expert Nominee – Web Technologies",
    description:
      "Nominated for contributions to the front-end ecosystem and educational content in design engineering.",
  },
  {
    year: "2024",
    title: "GitHub Star Program Recognition",
    description:
      "Highlighted for maintaining open-source UI libraries focused on design system scalability.",
  },
  {
    year: "2025",
    title: "Netlify Jamstack Innovation Award",
    description:
      "Recognized for pushing the boundaries of performance-first design on the modern web.",
  },
];
const socialLinks = [
  {
    label: "X",
    url: "#_",
    username: "@mike_andreuzza",
  },
  {
    label: "GitHub",
    url: "#_",
    username: "michael-andreuzza",
  },
  {
    label: "LinkedIn",
    url: "#_",
    username: "Michael Andreuzza",
  },
  {
    label: "Personal Website",
    url: "https://michaelandreuzza.com",
    username: "michaelandreuzza.com",
  },
];
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="pt-24 pb-12 lg:pt-48">
      <header class="flex items-center gap-4">
        <Image
          src={Designer}
          alt="Portrait of Vanta Smith, course instructor"
          width={1200}
          height={1200}
          class="object-cover rounded-full size-12"
        />
        <Text
          id="instructor-heading"
          tag="h1"
          variant="textBase"
          class="font-medium text-primary"
        >
          Meet your instructor
        </Text>
      </header>
      <article class="flex flex-col mt-4 gap-4">
        {
          bioParagraphs.map((para) => (
            <Text
              tag="p"
              variant="textBase"
              class="font-serif text-primary/60 text-balance"
            >
              {para}
            </Text>
          ))
        }
      </article>
    </Wrapper>
  </section>

  <section>
    <Wrapper variant="standard" class="py-12">
      <Text
        id="motivation-heading"
        tag="h2"
        variant="textBase"
        class="font-medium text-primary"
      >
        Why I built this
      </Text>
      <article
        class="flex flex-col pt-2 mt-2 border-t border-dotted gap-4 border-primary/10"
      >
        {
          motivation.map((item) => (
            <Text
              tag="p"
              variant="textBase"
              class="font-serif text-primary/60 text-balance"
            >
              {item}
            </Text>
          ))
        }
      </article>
    </Wrapper>
  </section>

  <section>
    <Wrapper variant="standard" class="py-12">
      <Text
        id="timeline-heading"
        tag="h2"
        variant="textBase"
        class="font-medium text-primary"
      >
        From graphic design to design systems
      </Text>
      <ul
        class="flex flex-col mt-2 border-t border-dotted divide-y divide-primary/10 border-primary/10"
      >
        {
          timeline.map((item) => (
            <li class="py-2 grid grid-cols-1 gap-1 md:grid-cols-4">
              <Text tag="h3" variant="textSM" class="text-primary">
                {item.year}
              </Text>
              <Text
                tag="p"
                variant="textSM"
                class="font-serif text-primary/60 md:col-span-3"
              >
                {item.event}
              </Text>
            </li>
          ))
        }
      </ul>
    </Wrapper>
  </section>

  <section>
    <Wrapper variant="standard" class="py-12">
      <Text
        id="awards-heading"
        tag="h2"
        variant="textBase"
        class="font-medium text-primary"
      >
        Awards & Recognition
      </Text>
      <ul
        class="flex flex-col mt-2 border-t border-dotted divide-y divide-primary/10 border-primary/10"
      >
        {
          awards.map((item) => (
            <li class="py-2 grid grid-cols-1 gap-1 md:grid-cols-4">
              <Text tag="h3" variant="textSM" class="text-primary">
                {item.year}
              </Text>
              <Text
                tag="p"
                variant="textSM"
                class="font-serif text-primary/60 md:col-span-3"
              >
                {item.title} — {item.description}
              </Text>
            </li>
          ))
        }
      </ul>
    </Wrapper>
  </section>

  <section>
    <Wrapper variant="standard" class="py-12">
      <Text
        id="social-heading"
        tag="h2"
        variant="textBase"
        class="font-medium text-primary"
      >
        Follow & Connect
      </Text>

      <ul
        role="list"
        class="flex flex-col pt-2 mt-2 border-t border-dotted gap-2 border-primary/10"
      >
        {
          socialLinks.map((link) => (
            <li class="relative flex items-baseline lg:justify-between">
              <a
                href={link.url}
                class="absolute inset-0 z-10"
                aria-label={`Visit ${link.label} profile for ${link.username}`}
                target="_blank"
                rel="noopener noreferrer"
              />
              <Text tag="span" variant="textSM" class="text-primary">
                {link.label}
              </Text>
              <span class="flex-1 mx-2 border-b border-dotted border-primary/10" />
              <Text
                tag="span"
                variant="textSM"
                class="font-serif text-primary/60"
              >
                {link.username}
              </Text>
            </li>
          ))
        }
      </ul>
    </Wrapper>
  </section>
</BaseLayout>
