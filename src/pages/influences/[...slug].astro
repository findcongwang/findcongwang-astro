---
import { getCollection } from "astro:content";
import InfluencesLayout from "@/layouts/InfluencesLayout.astro";
export async function getStaticPaths() {
  const influences = await getCollection("influences");
  const paths = influences.map((page) => {
    return {
      params: { slug: page.slug },
      props: { page },
      trailingSlash: false,
    };
  });
  return paths;
}
const { page } = Astro.props;
const { Content } = await page.render();
---
<InfluencesLayout frontmatter={page.data}>
  <Content />
</InfluencesLayout>