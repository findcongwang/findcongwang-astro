---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
---

<BaseLayout hideNav={true} hideFooter={true}>
  <div class="w-full max-w-md px-8 py-24 mx-auto lg:py-32">
    <div>
      <a href="/" class="text-xs text-primary hover:text-primary/60">
        Go back home</a
      >
      <Text tag="h1" variant="textBase" class="mt-12 font-medium text-primary">
        Contact us
      </Text>
      <Text
        tag="p"
        variant="textSM"
        class="font-serif text-primary/60 text-balance"
      >
        Questions? Compliments? Mild complaints? Drop us a line â€” we actually
        read these.
      </Text>
    </div>
    <form class="pt-2 mt-2 border-t border-dotted border-primary/10 space-y-4">
      <div class="w-full">
        <div class="flex items-baseline justify-between mb-1">
          <label for="email" class="text-xs font-medium text-primary/60"
            >Email Address</label
          >
        </div>
        <div class="relative z-0 focus-within:z-10">
          <input
            id="email"
            name="email"
            type="email"
            placeholder="you@example.com"
            class="block w-full px-4 py-2 text-xs leading-tight align-middle bg-secondary border border-transparent transition duration-300 ease-in-out focus:z-10 h-9 rounded-md text-primary/60 ring-1 ring-primary/10 placeholder-primary/30 focus:border-accent focus:ring-accent/10 focus:ring-2 focus:outline-none shadow-sm"
            inputmode="email"
          />
        </div>
      </div>
      <div class="w-full">
        <div class="flex items-baseline justify-between mb-1">
          <label for="message" class="text-xs font-medium text-primary/60"
            >Your Message</label
          >
        </div>
        <div class="relative z-0 focus-within:z-10">
          <textarea
            id="message"
            name="message"
            rows="6"
            placeholder="What's on your mind?"
            class="block w-full px-4 py-2 text-xs leading-tight align-middle bg-secondary border border-transparent transition duration-300 ease-in-out focus:z-10 rounded-md text-primary/60 ring-1 ring-primary/10 placeholder-primary/30 focus:border-accent focus:ring-accent/10 focus:ring-2 focus:outline-none shadow-sm"
          ></textarea>
        </div>
      </div>
      <Button size="xs" variant="muted" gap="sm" type="submit" class="w-fit">
        Send Message
      </Button>
    </form>
  </div>
</BaseLayout>
