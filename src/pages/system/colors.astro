---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const colors = [
  {
    name: "Base",
    shades: [
      { name: "Primary", class: "bg-primary" },
      { name: "Secondary", class: "bg-secodnary border border-primary/10" },
      { name: "Accent", class: "bg-accent" },
    ],
  },
];
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="pt-24 pb-12 lg:pt-48">
      <Text tag="h1" variant="textBase" class="text-primary"> Colors </Text>
      <div class="pt-2 mt-2 border-t border-dotted border-primary/10">
        {
          colors.map((color) => (
            <div class="mt-2 grid grid-cols-3 gap-2">
              {color.shades.map((shade) => (
                <div class="flex flex-col gap-2">
                  <div
                    class={`size-full aspect-square rounded-md ${shade.class}`}
                  />
                  <span class="text-xs text-primary/60">{shade.name}</span>
                </div>
              ))}
            </div>
          ))
        }
      </div>
    </Wrapper>
  </section>
</BaseLayout>
