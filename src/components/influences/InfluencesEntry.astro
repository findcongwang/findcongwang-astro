---
// Assets
import { Image } from "astro:assets";
import Text from "@/components/fundations/elements/Text.astro";

const { url, name, image, description } = {
  url: "/influences/" + Astro.props.post.slug,
  name: Astro.props.post.data.name,
  description: Astro.props.post.data.description,
  image: Astro.props.post.data.image.url,
};
---

<div class="relative flex flex-col md:flex-row items-start gap-4">
  <a
    href={url}
    aria-label={`View profile for ${name}`}
    title={`View profile for ${name}`}
    class="absolute inset-0 z-10"></a>
  <Image
    src={Astro.props.post.data.image.url}
    alt={Astro.props.post.data.image.alt}
    width={1200}
    height={800}
    class="size-8 rounded-full object-cover object-center aspect-square"
  />

  <div>
    <Text tag="h3" variant="textSM" class="text-primary">
      {name} {Astro.props.post.data.type && <span class="ml-2 text-primary/50 capitalize">({Astro.props.post.data.type})</span>}
    </Text>
    <Text
      tag="p"
      variant="textSM"
      class="mt-1 font-serif text-primary/60 text-balance"
    >
      {description}
    </Text>
  </div>
</div>
